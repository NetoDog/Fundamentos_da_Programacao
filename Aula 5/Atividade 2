#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
    setlocale(LC_ALL,"Portuguese");

   /*2) Um determinado clube de futebol pretende classificar seus atletas em categorias
e para isto ele contratou um programador para criar um programa que executasse
esta tarefa. Para isso o clube criou uma tabela que continha a faixa etária do atleta
e sua categoria. A tabela está demonstrada abaixo: ler idade e classificar o atleta.
IDADE CATEGORIA
De 05 a 10 Infantil
De 11 a 15 Juvenil
De 16 a 20 Junior
De 21 a 25 Profissional*/

      int idade;

      printf("Insira Idade:");
      scanf("%d",&idade);

      switch(idade){
          case 5 ... 10 : printf("Infantil");
          break;
          case 11 ... 15 : printf("Juvenil");
          break;
          case 16 ... 20 : printf("Junior");
          break;
          case 21 ... 25 : printf("Profissional");
          break;
          default : printf("Invalido");
      }


    return 0;
}
