#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
    setlocale(LC_ALL,"Portuguese");

   /*3) Escrever um programa para ler um número inteiro e informar se ele é divisível
por 3 e por 7.*/

    int numero,resto;

    printf("Insira um numero:");
    scanf("%d",&numero);

    if (numero%3==0 && numero%7==0)
        printf("\n%d divisivel por 3 e 7",numero);
    else
        printf("\n%d nao divisivel por 3 e 7",numero);

    return 0;
}
