#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
    /*7) Escreva um programa em C para ler o nome, altura e peso de duas
pessoas, mostrar o nome da pessoa mais pesada e o nome da pessoa
mais alta.*/

    float peso1,altura1,peso2,altura2;
    char nome1[30],nome2[30];

    printf("insira nome1:");
        gets(nome1);
        setbuf(stdin,NULL);

        printf("insira peso:");
        scanf("%f",&peso1);
        setbuf(stdin,NULL);

        printf("insira altura:");
        scanf("%f",&altura1);
        setbuf(stdin,NULL);


    printf("insira nome2:");
        gets(nome2);
        setbuf(stdin,NULL);

        printf("insira peso:");
        scanf("%f",&peso2);
        setbuf(stdin,NULL);

        printf("insira altura:");
        scanf("%f",&altura2);
        setbuf(stdin,NULL);

        if (altura1==altura2)
            printf("%s possue a mesma altura que %s ",nome1,nome2);
        else

           if(altura1>altura2)
            printf("\n%s e mais alto que %s",nome1,nome2);
        else
            printf("\n%s e mais alto que %s",nome2,nome1);

        if  (peso1==peso2)
            printf("\n %s possue o mesmo peso que %s",nome1,nome2);

        else

           if(peso1>peso2)
            printf("\n%s e mais pesado que %s", nome1,nome2);

        else
            printf("\n\n%s e mais pesado que %s", nome2,nome1);














    return 0;
}
