#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
    setlocale(LC_ALL,"Portuguese");


    /*3) Escreva um algoritmo que tendo como dados de entrada a altura e sexo
de uma pessoa calcule e escreva seu peso ideal.
Para homens = 72,7 *altura -58
Para mulheres = 62,1 * altura â€“ 44,7*/

    float altura,peso;
    char sexo[10];

    printf("insira o sexo, entre M ou F:");
    gets(sexo);
    setbuf(stdin,NULL);

    printf("insira altura:");
    scanf("%f",&altura);
    setbuf(stdin,NULL);

    if (strcmp(sexo,"M")==0)
        peso = 72.7 *altura -58;
     else
        peso = 62.1 *altura -44.7;

     printf("peso ideal :%.2f",peso);








    return 0;
}
