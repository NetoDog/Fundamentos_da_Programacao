#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
    setlocale(LC_ALL,"Portuguese");

    /*5) Escreva um programa em C que determine o valor de S.
ğ‘  = 1
1 âˆ’ 2
4 + 3
9 âˆ’ â‹¯ âˆ’ 10
100*/
    int cont=1;
    float s;
    char flag = '+';

        while (cont <= 10){
            if (flag == '+')
            {
                s = s + (float)cont / (cont*cont);
                flag = '-';
            }
            else
            {
                s = s - (float)cont / (cont*cont);
                flag = '+';
            }
            cont++;
            }

            printf("\n Valor:%f",s);
            return 0;
    }
