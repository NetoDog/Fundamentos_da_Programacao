#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
    setlocale(LC_ALL,"Portuguese");

   /*1) escreva um programa em C para escrever a tabuada de um numero qualquer
fornecido pelo usu√°rio;*/

    int numero,cont,numero2;

    printf("Insira o valor numerico:");
    scanf("%d",&numero);
    cont = 1;

    while (cont <= 10){
        numero2 = numero * cont;
        printf("\n%d x %d:%d",numero,cont,numero2);
        cont= cont + 1;
    }

    return 0;
}
